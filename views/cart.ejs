<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cart</title>
  <link rel="stylesheet" href="/css/cart.css">
</head>
<body>
  <main class="cart-page">
    <h1>Your Cart</h1>

    <% if (cartItems.length > 0) { %>
    <div class="cart-container">
      <!-- Left: Product List -->
      <div class="cart-items">
        <% cartItems.forEach(item => { %>
          <div class="cart-item">
            <!-- Product Image -->
            <img src="<%= item.image %>" alt="<%= item.name %>" class="cart-item-image">

            <!-- Product Details -->
            <div class="cart-item-details">
              <h2><%= item.name %></h2>
              <p>Size: <%= item.size %></p>
              <p>Quantity: <%= item.quantity %></p>
              <p>Price: $<%= item.price %> each</p>
              <p><strong>Total: $<%= (item.price * item.quantity).toFixed(2) %></strong></p>
              
              <!-- Remove Item Button -->
              <form action="/remove-from-cart" method="POST" class="remove-item-form">
                <input type="hidden" name="id" value="<%= item.id %>">
                <input type="hidden" name="size" value="<%= item.size %>">
                <button type="submit" class="remove-item-button">Remove</button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>

      <!-- Right: Order Summary -->
      <div class="order-summary">
        <h2>Order Summary</h2>
        <p>Subtotal: $<%= cartItems.reduce((sum, item) => sum + (item.price * item.quantity), 0).toFixed(2) %></p>
        <p>Shipping: $0.00</p>
        <p>Tax: $0.00</p>
        <hr>
        <p><strong>Total: $<%= cartItems.reduce((sum, item) => sum + (item.price * item.quantity), 0).toFixed(2) %></strong></p>
        <button class="payment-button">Proceed to Payment</button>
      </div>
    </div>
    <% } else { %>
    <p>Your cart is empty. <a href="/shop">Continue shopping</a>.</p>
    <% } %>
  </main>
</body>
</html>

  