<link rel="stylesheet" href="/css/singleproducts.css">
<link rel="stylesheet" href="/css/ingredients.css">

<main>
  <!-- Single Product Section -->
  <section class="product-display">
    <div class="product-images">
      <!-- Main Product Image -->
      <img src="<%= product.image %>" alt="<%= product.name %>" class="main-image">

      <!-- Additional Images (if available) -->
      <div class="image-gallery">
        <% if (product.additionalImages) { %>
          <% product.additionalImages.forEach(image => { %>
            <img src="<%= image %>" alt="<%= product.name %>" class="gallery-image">
          <% }) %>
        <% } %>
      </div>
    </div>

    <!-- Product Info -->
    <div class="product-info">
      <h1>Product Name: <%= product.name %></h1>
      <p><%= product.description %></p>

      <!-- Pricing -->
      <div class="product-price">
        <p>$<%= product.price.big %></p>
      </div>

      <!-- Size Selector -->
      <div class="size-selector">
        <label for="size">Size:</label>
        <select id="size" name="size">
          <% product.size.forEach(size => { %>
            <option value="<%= size %>"><%= size %></option>
          <% }) %>
        </select>
        <a href="#">Size Guide</a>
      </div>

      <!-- Buttons -->
      <div class="product-buttons">
        <button class="add-to-cart">Add to Cart</button>
        <button class="add-to-wishlist">Add to Wishlist</button>
      </div>
    </div>
  </section>

  <!-- Product Details -->
  <section class="product-details">
    <h2>Product Details</h2>
    <p><%= product.description %></p>
  </section>

  <!-- Ingredients Section -->
  <section class="product-ingredients">
    <h2 class="section-title">Did you know ?</h2>
    <div class="ingredients-list">
      <% ingredients.forEach(ingredient => { %>
        <div class="ingredient-card">
          <img src="<%= ingredient.image %>" alt="<%= ingredient.name %>" class="ingredient-image">
          <div class="ingredient-info">
            <h3 class="ingredient-name">Ingredient Name</h3>
            <p class="scientific-name"><em><%= ingredient.actualName %></em></p>
            <p class="ingredient-description">
              <%= ingredient.info %>
            </p>
            <button class="read-more-btn">Read More</button>
          </div>
        </div>
      <% }) %>
    </div>
  </section>
  <!-- Related Products -->
  <section class="related-products">
    <h2>Related Products</h2>
    <div class="related-list">
      <% relatedProducts.forEach(related => { %>
        <a href="/singleproducts/<%= related.id %>" class="related-item">
          <img src="<%= related.image %>" alt="<%= related.name %>">
          <p><%= related.name %></p>
        </a>
      <% }) %>
    </div>
  </section>
</main>

